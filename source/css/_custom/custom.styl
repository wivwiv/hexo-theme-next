      &-10
        width: 100%;
        margin: 0 auto;

.content.false
  .post-image.not-in-post
    display: none;
  @media (max-width: 767px)
    .posts-expand
      margin: 0;
    .posts-expand article.post.post-type-normal
      border-radius: 0;
      padding: 10px 20px;
      box-shadow: none;

// Custom styles.
html.mist
  #header
    box-shadow: 0 1px 4px 1px rgba(0,0,0,.05);
    background-color: #f9f9f9;
    // background-image: linear-gradient(90deg,#f79533 0,#f37055 15%,#ef4e7b 30%,#a166ab 44%,#5073b8 58%,#1098ad 72%,#07b39b 86%,#6dba82 100%)!important;
    .logo-line-before, .logo-line-after
      display: none;
    .site-title
      color: #000;
  .header-inner
    padding: 5px 0 5px
    .site-meta .site-title
      font-size: 18px;
      transition: all .3s ease-in;
      &:hover
        background: url(/images/snow.gif);
        background-size: cover;
    .site-meta 
      margin-top: 4px
  #menu 
    .menu-item
      margin-right: 5px;
      position: relative;
      a
        color: #000;
        &:hover
          background: none;
          opacity: 0.6
      &-active
        a
          background: none;
          opacity: 0.6;
          // background-color: rgba(0, 0, 0, 0.05);
      &-tools
        &:after
          content: " ";
          width: 6px;
          height: 6px;
          background-color: #f5222d;
          display: inline-block;
          position: absolute;
          right: 2px;
          top: 4px;
          border-radius: 50%;
  .posts-expand
    p
      line-height: 29px;
      margin: 1em 0 1.25em 0;
    article.post.post-type-normal
      border-radius: 5px;
      padding: 10px 30px 20px 30px;
      // box-shadow: 0 0 40px rgba(0,0,0,.12);
  .content.true
    article.post.post-type-normal
      box-shadow: 0 0 40px rgba(0,0,0,.12);

  .main-inner
    margin-top: 20px
  .post-body
    margin-top: 20px
    // font-family: "Linux Biolinum",'Noto Serif SC',sans-serif;
    color: #444;
    h2, h3, h4, h5
      // margin-top: 32px;

  // 首页特殊样式 
  .content.true
    .post-header
      padding: 20px; 
      // height: 200px;
      position:relative;
      .post-title
        margin-top: 10px;
        transition: all .3s;
        &:hover a
          color: #000
      .post-avatar
        width: 80px
        height: 80px
        margin-right: 10px;
        border-radius: 5px;
        float: left;
        object-fit: cover;
      @media (max-width: 767px)
        .post-avatar
          display: none;
          width: 100%;
          height: auto;
          margin: 10px auto;
      .excerpt-text
        min-height: 50px;
        font-size: 14px;
        line-height: 28px;
        color: #757575;
      .post-meta
        clear: both;
        margin-top: 10px;
        margin-bottom: 0px !important;
        color: #a0a0a0;
        .post-category, .post-category a
          color: #444;
        a
          color: #a0a0a0;
          border: none;
        & > span 
          margin-right: 10px;
        time
          border: none !important;
          margin-right: 10px;
      .v-line
        border-bottom: 1px solid rgba(222,229,231,.45);
        border-color: rgba(237,241,242,.6);
        margin: 10px auto;

    .post.post-type-normal
      padding: 0
    .posts-expand
      .post-title
        text-align: left;
        font-size: 18px;
        margin-bottom: 10px;
      .post-title-link:hover::before
        visibility: hidden
      .post-meta
        text-align: left;
        margin-bottom: 10px;

  .posts-expand 
    .post-title
      text-align: center;
    .post
      margin-top: 20px;
      &.post:first-child
        margin-top: 0;
    .post-meta
        text-align: center;
    .post-title-link::before
        background-image: linear-gradient(19deg, #101010 0%, #2a2a2a 100%);

      // background-image: linear-gradient(90deg,#a166ab 0,#ef4e7b 25%,#f37055 50%,#ef4e7b 75%,#a166ab 100%);
    
    .post-button
      text-align: center;
      margin-top: 20px;
    .post-block
      margin-bottom: 28px;

  h1, h2, h3, h4, strong
    font-weight: 600;
    color: #2c3e50;

  // 默认 1000
  .container .main-inner
    // width: 1000px;

  @media (max-width: 767px)
    .container .main-inner 
        width: 100%!important;

  .btn {
    color: #6f42c1;
    background-color: #f9f9f9;
    border-radius: 3px;
    border: 1px solid #6f42c1;
    transition-property: unset;
    padding: 0 15px;
    margin: inherit;
    transition: all .3s;
  }
  .btn:hover {
    background-color: #6f42c1;
    color: #fff;
    border-radius: 3px;
    margin: inherit;
  }

  .btn +.btn {
    margin: 0 0 8px 8px;
  }


