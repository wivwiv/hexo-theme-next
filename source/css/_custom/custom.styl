.comp-table + table
  border: none;
  td, th
    border: none;
  tbody > tr
    &:hover
      background-color: #fff;
    &:nth-of-type(odd)
      background-color: #fff;
  th
    color: #fff;
    padding: .5em 1em;
    font-weight: 700;
    font-size: 1.1em;
    width: 50%;
    &:first-child
      background-color: #6f42c1;
      border-radius: 4px 0 0 4px;
    &:last-child
      background-color: #d9534f;
      border-radius: 0 4px 4px 0;
  tr td
    &:first-child
      &:before
        content: "\f00c";
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: 16px;
        text-rendering: auto;
        color: #6f42c1;
        margin-right: 10px;
    &:last-child
      &:before
        content: "\f05e";
        display: inline-block;
        font: normal normal normal 14px/1 FontAwesome;
        font-size: 16px;
        text-rendering: auto;
        color: #d9534f;
