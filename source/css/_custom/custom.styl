@media (min-width: 1200px)
  body
    font-size: 14px;

@media (min-width: 1600px)
  body
    font-size: 16px;

@media (min-width: 767px)
  // 在是否首页 .content.true
  .content.true
    .post-image
      width: 50%;
      margin: 0 auto;
      &-8
        width: 80%;
        margin: 0 auto;
      &-10
        width: 100%;
        margin: 0 auto;

.content.false
  .post-image.not-in-post
      display: none;

// Custom styles.
html.mist
  #header
    background-image: linear-gradient(90deg,#f79533 0,#f37055 15%,#ef4e7b 30%,#a166ab 44%,#5073b8 58%,#1098ad 72%,#07b39b 86%,#6dba82 100%)!important;
    .logo-line-before, .logo-line-after
      display: none;
    .site-title
      color: #fff;
  .header-inner
    padding: 5px 0 5px
    .site-meta .site-title
      font-size: 18px;
    .site-meta 
      margin-top: 4px
  #menu .menu-item a
    // color: #fff;
    &:hover
      // background-color: #f68e39

  .posts-expand
    article.post.post-type-normal
      border-radius: 5px;
      padding: 10px 30px 20px 30px;
      box-shadow: 0 0 40px rgba(0,0,0,.12);

  .main-inner
    margin-top: 20px
  .post-body
    margin-top: 20px
    // font-family: "Linux Biolinum",'Noto Serif SC',sans-serif;
    color: #000;

  .posts-expand 
    .post-title
      text-align: center;
    .post
      margin-top: 20px;
      &.post:first-child
        margin-top: 0;
    .post-meta
        text-align: center;
    .post-title-link::before
        background-image: linear-gradient(19deg, #101010 0%, #555 100%);

      // background-image: linear-gradient(90deg,#a166ab 0,#ef4e7b 25%,#f37055 50%,#ef4e7b 75%,#a166ab 100%);
    
    .post-button
      text-align: center;
      margin-top: 20px;
    .post-block
      margin-bottom: 28px;

  h1, h2, h3, h4, strong
    font-weight: 600;
    color: #2c3e50;

  // 默认 1000
  .container .main-inner
    // width: 1000px;

  @media (max-width: 767px)
    .container .main-inner 
        width: 100%!important;

  .btn {
    color: #555;
    background-color: #fff;
    border-radius: 3px;
    font-size: 15px;
    box-shadow: inset 0 0 10px 0 rgba(0,0,0,.35);
    border: none!important;
    transition-property: unset;
    padding: 0 15px;
    margin: inherit;
  }
  .btn:hover {
    color: #fff;
    border-radius: 3px;
    font-size: 15px;
    box-shadow: inset 0 0 10px 0 rgba(0,0,0,.35);
    background-image: linear-gradient(90deg,#a166ab 0,#ef4e7b 25%,#f37055 50%,#ef4e7b 75%,#a166ab 100%);
    margin: inherit;
  }
  .btn +.btn {
    margin: 0 0 8px 8px;
  }


// AD
// 广告
.sitebar-ad-wrap
  width: 100%;
  margin-top: 10px;
  .adsbygoogle
    margin: 0 auto;

.sidebar:not(.sidebar-active)
  .sitebar-ad-wrap
    display: none;

  
.post-ad
  &.post-type-normal
    padding: 0 !important;
    margin-top: 32px !important;
  .post-footer
    // margin-bottom: 30px;

.comments-ad
  min-height: 90px;
  margin: 16px auto 0 auto;
.adsbygoogle
  // background-color: red;
.post-content-ad
  margin: 24px auto;

/* 自定义的文章摘要图片样式 */
img.img-topic
  width: 100%;

// 归档页面
.posts-collapse
  .post-title-link
    // margin-left: 46px;
  .post-meta
    left: 6px;

.posts-expand .post-body img
  padding: 3px;
  border-radius: 6px;
  border: none;

.img-box
  text-align: center;
  br
    display: none;
  .img-wrap
    width: 40%;
    display: inline-block;
    padding: 0;
    margin: 10px;
    border: none;
    text-align: center;
    cursor: pointer;
    span
      font-size: 12px
      color: #333;
      cursor: pointer;
      &:hover
        text-decoration: underline;

@media (max-width: 767px)
  .img-box .img-wrap
    width: 90%;