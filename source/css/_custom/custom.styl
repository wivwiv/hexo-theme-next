// 广告
.sitebar-ad-wrap
  width: 100%;
  margin-top: 10px;
  .adsbygoogle
    margin: 0 auto;

.sidebar:not(.sidebar-active)
  .sitebar-ad-wrap
    display: none;

  
.post-ad
  &.post-type-normal
    padding: 0 !important;
    margin-top: 32px !important;
  .post-footer
    // margin-bottom: 30px;

.comments-ad
  min-height: 90px;
  margin: 16px auto 0 auto;
.adsbygoogle
  // background-color: red;
.post-content-ad
  margin: 24px auto;

/* 自定义的文章摘要图片样式 */
img.img-topic
  width: 100%;

// 归档页面
.posts-collapse
  .post-title-link
    // margin-left: 46px;
  .post-meta
    left: 6px;

.posts-expand .post-body img
  padding: 3px;
  border-radius: 6px;
  border: none;

.img-box
  text-align: center;
  br
    display: none;
  .img-wrap
    width: 40%;
    display: inline-block;
    padding: 0;
    margin: 10px;
    border: none;
    text-align: center;
    cursor: pointer;
    span
      font-size: 12px
      color: #333;
      cursor: pointer;
      &:hover
        text-decoration: underline;

@media (max-width: 767px)
  .img-box .img-wrap
    width: 90%;

a[title="站长统计"]
  display: none;

.pagination
  margin-top: 80px;
  text-align: center;
  padding-top: 10px;
  .page-number, .next, .prev
    border-top: none;
    transition: all .3s;
    &:hover
      background-color: #ccc;
      color: #fff;

.post-description
  display: none;