// Custom styles.
html.mist
  @media (min-width: 1200px)
    .posts-expand .post-title
      font-size: 20px;
  #header
    .logo-line-before, .logo-line-after
      display: none;

  .site-meta .site-title
    font-size: 16px;

  .header-inner
    padding: 0;
    .site-nav
      @media (min-width: 767px)
        margin-left: 132px;

  .menu
    margin: 3px 0 0 0 !important;
    text-align: left;

  .posts-expand .post
    margin-top: 60px;
    &.post:first-child
      margin-top: 0;

  .post-title
    margin: 0

  .main-inner
    // margin-top: 50px
  .post-body
    margin-top: 20px
  .posts-expand .post-meta
    margin-bottom: 10px
  .post-button
    margin-top: 12px
  
  .btn {
    display: inline-block;
    padding: 0 20px;
    font-size: 14px;
    color: #555;
    background: #fff;
    border: 2px solid #555;
    text-decoration: none;
    border-radius: 0;
    transition-property: background-color;
    transition-duration: 0.2s;
    transition-timing-function: ease-in-out;
    transition-delay: 0s;
    line-height: 2;
  }
  .btn:hover {
    border-color: #222;
    color: #fff;
    background: #222;
  }
  .btn +.btn {
    margin: 0 0 8px 8px;
  }


html.pisces
